{
    "version": "2.0.0",
    "type": "shell",
    "tasks": [
        {
            "label": "Update Submodules",
            "command": "git submodule update --init",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Create Build Directory",
            "command": "if (!(Test-Path build)) { mkdir build }",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "CMake Configure Build",
            "command": "cmake -S . -B build -A x64",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "Create Build Directory"
            ]
        },
        {
            "label": "CMake Build",
            "command": "cmake --build build --config Release",
            "dependsOn": [
                "CMake Configure Build",
                "Update Submodules"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}