{
    "version": "2.0.0",
    "type": "shell",
    "tasks": [
        {
            "label": "Create Build Directory",
            "command": "if (!(Test-Path build)) { mkdir build }",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "CMake Configure Build",
            "command": "cmake -S . -B build",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "Create Build Directory"
            ]
        },
        {
            "label": "CMake Build",
            "command": "cmake --build build",
            "dependsOn": [
                "CMake Configure Build"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Install VST",
            "command": "cp 'build/hardclip_artefacts/Debug/VST3/Hard Clip.vst3/Contents/x86_64-win/Hard Clip.vst3' 'C:/Program Files/Common Files/VST3/Hard Clip.vst3'",
            "dependsOn": [
                "CMake Build"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}